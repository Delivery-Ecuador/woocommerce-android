<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_surface"
    android:padding="@dimen/major_100">

    <View
        android:id="@+id/categoryName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/skeleton_text_height_100"
        android:layout_marginEnd="@dimen/major_100"
        android:layout_marginStart="@dimen/major_100"
        android:background="@color/skeleton_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/productSelected"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/skeleton_text_height_100"
        android:background="@color/skeleton_color"
        app:layout_constraintBaseline_toBaselineOf="@id/categoryName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/categoryName" />

</androidx.constraintlayout.widget.ConstraintLayout>
